<% content_for :header do %>
  <div class="head-center">
    <%= render 'shared/search_form' %>
  </div>
<% end %>

<%= render "surah_actions" %>

<div id="chapter-info"></div>

<div class="container">
  <% if @presenter.show_bismillah? %>
    <%= render "bismillah" %>
  <% end %>
  <div id="verses" data-chapter-id="<%= @presenter.chapter.id %>" data-total-verses="<%= @presenter.chapter.verses_count %>" data-controller="slim-scroller infinite-page">
    <%= render "verses" %>
  </div>
</div>

<%= render 'player' %>
